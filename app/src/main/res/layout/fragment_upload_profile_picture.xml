<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Profile Picture"
        android:id="@+id/tv_selectImage"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Picture"
        android:background="@drawable/rounded_bordered_click_button"
        android:id="@+id/b_changePicture"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/uploadProfilePictureSpace"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/b_signUp"
        android:background="@drawable/rounded_bordered_click_button"
        android:layout_gravity="right|bottom"
        android:layout_alignTop="@+id/b_changePicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:visibility="visible"
        android:layout_marginRight="@dimen/uploadProfilePictureSpace"
        android:alpha=".5" />

    <ImageView
        android:id="@+id/iv_profilePicture"
        android:layout_width="@dimen/profilePictureWidth"
        android:layout_height="@dimen/profilePictureHeight"
        android:src="@drawable/gravatar_icon"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
